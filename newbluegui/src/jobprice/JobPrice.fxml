<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jobprice.JobPriceCtrl">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <left>
            <VBox spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox spacing="5.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TableView fx:id="viewTable" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colTableId" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="colTableName" prefWidth="75.0" text="Tabela" />
                          </columns>
                        </TableView>
                        <VBox spacing="5.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#insertTable">
                                 <graphic>
                                    <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../icons/add.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#deleteTable">
                                 <graphic>
                                    <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../icons/delete.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox spacing="5.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TableView fx:id="viewJob" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colJobId" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="colJobName" prefWidth="75.0" text="Trabalho" />
                          </columns>
                        </TableView>
                        <VBox spacing="5.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#insertJob">
                                 <graphic>
                                    <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../icons/add.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#deleteJob">
                                 <graphic>
                                    <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../icons/delete.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </left>
         <center>
            <TableView fx:id="viewPrice" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="colTable" prefWidth="75.0" text="Tabela" />
                <TableColumn fx:id="colJob" prefWidth="75.0" text="Trabalho" />
                  <TableColumn fx:id="colPrice" prefWidth="75.0" text="PreÃ§o" />
              </columns>
               <BorderPane.margin>
                  <Insets left="20.0" right="5.0" />
               </BorderPane.margin>
            </TableView>
         </center>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <right>
            <VBox spacing="5.0" BorderPane.alignment="TOP_CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#insertPrice">
                     <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#deletePrice">
                     <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/delete.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
